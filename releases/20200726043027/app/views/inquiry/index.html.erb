<div class="content">
  <div class="row">
    <%= form_for @inquiry, :url => inquiry_confirm_path, method: :get do |f| %>
      <div class="page__title text-center page-header">
        <h1>お問い合わせ</h1>
      </div>
  </div>

<div class="row">
  <div class="col-md-3"></div>
  <div class="col-md-8">
  <% if @inquiry.errors.any? %>
    <div class="alert alert-danger" role="alert">
      <strong>入力内容にエラーがあります</strong>
      <ul>
        <% @inquiry.errors.each do |attr, msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <table class="inquiry__table form-group">
    <tr>
      <th>名前<span class="text-danger">（必須）</span></th>
      <td><%= f.text_field :name, class: "inquiry__text__field form-control " %></td>
    </tr>
    <tr>
      <th>メールアドレス<span class="text-danger">（必須）</span></th>
      <td><%= f.text_field :email, class: "inquiry__text__field form-control" %></td>
    </tr>
    <tr>
      <th>お問い合わせ内容</th>
      <td><%= f.text_area :message, class: "content__area form-control" %></td>
    </tr>
    <tr>
      <th colspan= 2>
          <%= f.submit "確認", class: "btn__next" %></th>
    </tr>
  </table>
<% end %>
</div>
</div>
</div>