<h2>新規会員登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "patients/shared/error_messages", resource: resource %>
 <div class="field">
    <%= f.label :"診察券番号" %><br />
    <%= f.text_field :membership_number_id, autofocus: true, autocomplete: "membership_number_id" %>
  </div>
  <div class="field">
    <%= f.label :"氏名" %><br />
    <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
  </div>

  <div class="field">
    <%= f.label :"氏名かな" %><br />
    <%= f.text_field :name_kana, autofocus: true, autocomplete: "name_kana" %>
  </div>

  <div class="field">
  <%= f.label :"生年月日" %><br />
    <%= raw sprintf(
          f.date_select(
            :birthday,
             use_month_numbers: true,
             start_year: 1930,
             end_year: (Time.now.year - 1 ),
             default: Date.new(1990, 1, 1),
             date_separator: '%s'),
            '年 ', '月 ') + '日' %>
  </div>

  <div class=" field">
  <%= f.label :"性別" %><br />
    <%= f.radio_button :sex, 1, checked: true %>男
    <%= f.radio_button :sex, 2 %>女
  </div>

  <div class=" field">
    <%= f.label :"電話番号（ハイフン無し）" %><br />
    <%= f.text_field :phonenumber %>
  </div>

  <div class="field">
    <%= f.label :"メールアドレス" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :"パスワード" %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> 文字以上)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :"パスワード確認用" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "登録完了" %>
  </div>
<% end %>

<%= render "patients/shared/links" %>
