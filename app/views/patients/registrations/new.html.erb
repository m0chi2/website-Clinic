<h2>会員新規登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "patients/shared/error_messages", resource: resource %>
  <div class="field">
    <%= f.label :membership_number %><br />
    <%= f.text_field :membership_number, autofocus: true, autocomplete: "membership_number", :placeholder =>"A0000000" %>
  </div>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name, autofocus: true, autocomplete: "name", :placeholder =>"熊猫太郎" %>
  </div>

  <div class="field">
    <%= f.label :name_kana %><br />
    <%= f.text_field :name_kana, autofocus: true, autocomplete: "name_kana", :placeholder =>"パンダタロウ" %>
  </div>

  <div class="field">
    <%= f.label :birthday %><br />
    <%= raw sprintf(
          f.date_select(
            :birthday,
             use_month_numbers: true,
             start_year: 1930,
             end_year: (Time.now.year - 1 ),
             default: Date.new(1990, 1, 1),
             date_separator: '%s'),
            '年 ', '月 ') + '日' %>
  </div>

  <div class="field">
    <%= f.label :sex %><br />
    <%= f.radio_button :sex, 1, checked: true %>男
    <%= f.radio_button :sex, 2 %>女
  </div>

  <div class="field">
    <%= f.label :phonenumber %><br />
    <%= f.text_field :phonenumber, autofocus: true, autocomplete: "phonenumber", :placeholder => "0000000" %>
  </div>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", :placeholder => "example@gmail.com" %>
  </div>

  <div class="field">
    <%= f.label :password, "パスワード(#{@minimum_password_length}文字以上)" %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, "パスワード（6文字以上、確認用）" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "登録完了" %>
  </div>
<% end %>

<%= render "patients/shared/links" %>
