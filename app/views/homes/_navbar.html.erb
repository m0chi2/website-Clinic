<% else %>
<nav id="navwrap">
	<ul class="main-nav">
		<li>
			大きな文字で<br>
		    メニューを見る
		</li>
		<li><%= link_to "/about" do %>
				<span class="glyphicon glyphicon-home" aria-hidden="true"></span><br>
				<span class="title">医院のご案内</span><br>
			<% end %>
		</li>
		<li><%= link_to "/exams" do %>
			<span class="glyphicon glyphicon-comment" aria-hidden="true"></span><br>
			<span class="title">診察のご案内</span>
		<% end %>
		</li>
		<li><%= link_to "/access" do %>
			<span class="glyphicon glyphicon-comment" aria-hidden="true"></span><br>
			<span class="title">交通案内</span>
		<% end %>
		</li>
		<li><%= link_to new_patient_session_path do %>
			<span class="glyphicon glyphicon-user" aria-hidden="true"></span><br>
			<span class="title">会員ページ</span>
		<% end %>
		</li>
	</ul>
</nav>
<% end %>